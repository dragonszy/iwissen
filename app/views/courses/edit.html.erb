<% provide(:title, '编辑课程') %>
<h1>编辑课程</h1>

<%= simple_form_for @course, :url => course_path, :method => :put do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :name %>
    <%= f.input :teacher %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= link_to '显示', course_path(@course.title) %> |
<%= link_to '返回', courses_path %>
