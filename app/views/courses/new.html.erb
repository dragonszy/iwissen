<% provide(:title, '创建课程') %>

<h1>创建课程</h1>

<%= simple_form_for @course do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :name %>
    <%= f.input :teacher %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= link_to '返回', courses_path %>
